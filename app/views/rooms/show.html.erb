<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @room.name %>
</p>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="<%= root_path %>">ChatApp</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="<%= root_path %>">Home <span class="sr-only">(current)</span></a>
      </li>
      <ul class="navbar-nav ml-auto">
      <% if current_user %>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
     
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-expanded="false">
         <%= current_user.username %>
        </a>
        <div class="dropdown-menu dropdown-menu-right">
          <%= link_to "Edit account", edit_user_registration_path, class: "dropdown-item" %> 
          <%= button_to "signout", destroy_user_session_path, class: "dropdown-item", method: :delete %>
      </li>
    </ul>
      <% else %>
      <%= link_to "create account", new_user_registration_path, class: "nav-link" %>
      <%= link_to "sign in", new_user_session_path, class: "nav-link" %>
      <% end %>
    </ul>
  </div>
  </div>
  </div>

</nav>
<div id="main">
  <h2><%= @room.name %></h2>
  <div id="chat_body">
    <div id="messages">
      <% @room.messages.each do |m| %>
      <% if m.user_id !=current_user.id %>

      <p style="background-color: chocolate;
          border-bottom-right-radius: 10px;"> <%= m.message %> </p>
          <% else %>
      <p style=" border-bottom-left-radius: 10px;
          background-color: darkred;
          align-self: flex-end;"> <%= m.message %> </p>
          <% end %>
      <% end %>
    </div>
   
    <form id="send_message">
      <input type="text" id="message" name="message" autocomplete="off" style="margin-bottom: 10px;" placeholder="type something...">
      <button>Send</button>
    </form>
  </div>
  <div id="modal">
    <div>
      <% if Room.last.messages.pluck(:user_id).include?(current_user.id) %>
       <form id="set_name">
        <input type="text" id="add_name" name="add_name" autocomplete="off" placeholder="please enter your name...", value="<%= current_user.username %>">
        <button>Click to start chat</button>
      </form>
      <% else %>
      <h4>Enter your name</h4>
      <form id="set_name">
        <input type="text" id="add_name" name="add_name" autocomplete="off" placeholder="please enter your name...", value="<%= current_user.username %>">
        <button>Join room</button>
      </form>
      <% end %>
    </div>
  </div>
</div>